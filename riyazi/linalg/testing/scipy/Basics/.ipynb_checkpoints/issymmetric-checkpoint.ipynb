   "source": [
    "### Check if a square 2D array is symmetric."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "597cb615",
   "metadata": {},
   "outputs": [],
   "source": [
    "from scipy.linalg import issymmetric\n",
    "A = np.arange(9).reshape(3, 3)\n",
    "A = A + A.T\n",
    "issymmetric(A)"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "de4ffcfb",
   "metadata": {},
   "outputs": [],
   "source": [
    "Ac = np.array([[1. + 1.j, 3.j], [3.j, 2.]])\n",
    "issymmetric(Ac)  # not Hermitian but symmetric"
   ]
  }
