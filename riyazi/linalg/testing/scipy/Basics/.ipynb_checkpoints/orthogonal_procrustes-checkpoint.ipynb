   "source": [
    "### Compute the matrix solution of the orthogonal Procrustes problem."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 1,
   "id": "f4057e08",
   "metadata": {},
   "outputs": [],
   "source": [
    "import numpy as np"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "id": "560fc7df",
   "metadata": {},
   "outputs": [],
   "source": [
    "from scipy.linalg import orthogonal_procrustes\n",
    "A = np.array([[ 2,  0,  1], [-2,  0,  0]])"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 3,
   "id": "fbc17b33",
   "metadata": {},
   "outputs": [
    {
     "data": {
      "text/plain": [
       "array([[-5.34384992e-17,  0.00000000e+00,  1.00000000e+00],\n",
       "       [ 0.00000000e+00,  1.00000000e+00,  0.00000000e+00],\n",
       "       [ 1.00000000e+00,  0.00000000e+00, -7.85941422e-17]])"
      ]
     },
     "execution_count": 3,
     "metadata": {},
     "output_type": "execute_result"
    }
   ],
   "source": [
    "R, sca = orthogonal_procrustes(A, np.fliplr(A))\n",
    "R"
   ]
  },
  {
