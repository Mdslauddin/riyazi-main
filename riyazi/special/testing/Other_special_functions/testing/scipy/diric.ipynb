    "from math import sin"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 4,
   "id": "bca5c72d",
   "metadata": {},
   "outputs": [],
   "source": [
    "def diric(x,n):\n",
    "    return sin(x * n/2) / (n * sin(x / 2))"
   ]
  },
